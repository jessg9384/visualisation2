{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/jessg9384/visualisation2/main/data/spending_clean_new.csv"},
    "params":[
      {
        "name": "attribute",
        "bind":{
            "input":"select",
            "options": [
                "overnight",
                "daytrip"
            ],
            "labels":[
                "Overnight trips",
                "Day trips"
            ],
            "name":"Trip type: "
        }
      }
    ],
    "width": "container",
    "height": 320,
    "autosize": {
        "type": "fit",
        "contains": "padding",
        "resize": true
      },
    "title": "Domestic spending on tourism in each state",
    "encoding": {"x": {"field": "year", "type": "temporal","title":"Year"}},
    "layer": [
      {
        "encoding": {
          "color": {"field": "Location", "type": "nominal"},
          "y": {"field": "spend", "type": "quantitative","title":"Amount Spent ($M AUD)"}
        },
        "layer": [
          {"transform": [{"filter": "datum.triptype == attribute || datum.triptype == 'overnight' & attribute==null"}],"mark": "line"},
          {"transform": [{"filter": {"param": "hover", "empty": false}},{"filter": "datum.triptype == attribute || datum.triptype == 'overnight' & attribute==null"}], "mark": "point"}
        ]
      },
      {
        "transform": [
          {
            "filter": "datum.triptype == attribute || datum.triptype == 'daytrip' & attribute==null"
          },
          {
            "calculate": "'in 2020, hello'",
            "as": "annotation_text"
          }
        ],
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 3
        },
        "encoding": {
          "text": {
            "field": "spend",
            "type": "quantitative"
          },
          "y": {
            "field": "spend",
            "type": "quantitative",
            "title": "Amount Spent ($M AUD)"
          },
          "color": {
            "condition": {
              "test": "datum.spend == 30000",
              "value": "black"
            },
            "value": "transparent"
          }
        }
      },
      {
        "transform": [
            {"filter": "datum.triptype == attribute || datum.triptype == 'overnight' & attribute==null"},
            {"pivot": "Location", "value": "spend", "groupby": ["year"]}
        ],
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {"field": "year","type":"temporal","formatType": "year","title":"Year"},
            {"field": "ACT", "type": "quantitative","format": ","},
            {"field": "NSW", "type": "quantitative","format": ",","title": "NSW"},
            {"field": "NT", "type": "quantitative","format": ",","title": "NT"},
            {"field": "QLD", "type": "quantitative","format": ",","title": "QLD"},
            {"field": "SA", "type": "quantitative","format": ",","title": "SA"},
            {"field": "TAS", "type": "quantitative","format": ",","title": "TAS"},
            {"field": "VIC", "type": "quantitative","format": ",","title": "VIC"},
            {"field": "WA", "type": "quantitative","format": ",","title": "WA"}
          ]
          
        },
        "params": [{
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["year"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
          
        }]
              

      }
                  

    ]
  }
